<UserControl x:Class="GameLibrary.Views.PimpMyCodeView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:ti="clr-namespace:System.Windows.Controls;assembly=System.Windows.Controls.Input.Toolkit" xmlns:Framework="clr-namespace:GameLibrary.Framework">
    
 
    
    <StackPanel HorizontalAlignment="Stretch">
        <StackPanel HorizontalAlignment="Right">
            <TextBlock x:Name="Title" Style="{StaticResource subheader}"/>
            
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <TextBlock Text="Presented on" Style="{StaticResource smallEmphasis}"/>
                <TextBlock x:Name="PresentedOn"  Style="{StaticResource smallEmphasis}"/>
            </StackPanel>
            
        </StackPanel>
       
        <Border x:Name="ShowWarning" Style="{StaticResource panel}" Margin="0 2 0 0">
            <TextBlock x:Name="Warning" Text="Warning!"   />
        </Border>

        <StackPanel Margin="0,20,0,0" Orientation="Horizontal" HorizontalAlignment="Stretch">
            <Button x:Name="Cancel">Back</Button>
            <Button x:Name="Delete">Delete</Button>
        </StackPanel>
        
    </StackPanel>
</UserControl>